    "# import the time module\n",
    "import time\n",
    "\n",
    "t = int(input(\"Enter the time in seconds: \"))    \n",
    "while t:\n",
    "        mins, secs = divmod(int(t), 60)\n",
    "        timer = '{:02d}:{:02d}'.format(mins, secs)\n",
    "        print(timer, end=\"\\r\")\n",
    "        time.sleep(1)\n",
    "        t -=1\n",
    "      \n"
